# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = tab
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true
end_of_line = lf

[*.rb]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 4
